<?xml version="1.0"?>
<robot name="tbot_v7">

  <!-- MATERIAL DEFINITIONS -->
  <!-- Dark Blue -->
  <material name="dark_blue">
  <color rgba="0.1 0.2 0.7 1"/>
</material>

<!-- Red -->
  <material name="red">
  <color rgba="0.8 0.2 0.2 1"/>
  </material>

<!-- Bright Green -->
<material name="bright_green">
  <color rgba="0 1 0 1"/>
</material>

<!-- Medium Gray -->
<material name="medium_gray">
  <color rgba="0.5 0.5 0.5 1"/>
</material>

<!-- Dark Gray (black) -->
<material name="dark_gray">
  <color rgba="0.1 0.1 0.1 1"/>
</material>

  <!-- LINK DEFINITIONS -->
  
  <!-- BASE LINK -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.06"/>  <!-- 40x30x6 -->
      </geometry>
      <material name="dark_blue"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    
    <collision>
      <geometry>
        <box size="0.5 0.3 0.06"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.025" ixy="0" ixz="0" iyy="0.065" iyz="0" izz="0.085"/>
    </inertial>
  </link>

  <!-- LEFT DRIVE WHEEL -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.10" length="0.05"/>  <!-- 10r 5t -->
      </geometry>
      <material name="dark_gray"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </visual>
    
    <collision>
      <geometry>
        <cylinder radius="0.10" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.008"/>
    </inertial>
  </link>

  <!-- RIGHT DRIVE WHEEL -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.10" length="0.05"/>
      </geometry>
      <material name="dark_gray"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </visual>
    
    <collision>
      <geometry>
        <cylinder radius="0.10" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.008"/>
    </inertial>
  </link>

  <!-- FRONT CASTER WHEEL -->
  <link name="front_caster">
    <visual>
      <geometry>
        <sphere radius="0.04"/>  <!-- 4r -->
      </geometry>
      <material name="medium_gray"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    
    <collision>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    
    <inertial>
      <mass value="0.15"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- SENSOR MOUNT -->
  <link name="sensor_mount">
    <visual>
      <geometry>
        <box size="0.10 0.10 0.12"/>  <!-- (Sensor Size)10x10x12 -->
      </geometry>
      <material name="red"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    
    <collision>
      <geometry>
        <box size="0.10 0.10 0.12"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    
    <inertial>
      <mass value="0.3"/>  <!-- Sensor Weight -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0015" ixy="0" ixz="0" iyy="0.0015" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- BATTERY -->
  <link name="battery_compartment">
    <visual>
      <geometry>
        <box size="0.20 0.15 0.04"/>  <!-- (Battery Size)20x15x4 -->
      </geometry>
      <material name="bright_green"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    
    <collision>
      <geometry>
        <box size="0.20 0.15 0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    
    <inertial>
      <mass value="1.5"/>  <!-- Battery Weight -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.018"/>
    </inertial>
  </link>

  <!-- JOINT DEFINITIONS -->
  
  <!-- LEFT WHEEL JOINT -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.18 0.175 -0.04" rpy="0 0 0"/>  <!-- Rear Left -->
    <axis xyz="0 1 0"/>
    <dynamics damping="0.2" friction="0.15"/>  <!-- Increased damping for stability -->
  </joint>

  <!-- RIGHT WHEEL JOINT -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.18 -0.175 -0.04" rpy="0 0 0"/>  <!-- Rear Right -->
    <axis xyz="0 1 0"/>
    <dynamics damping="0.2" friction="0.15"/>
  </joint>

  <!-- FRONT CASTER JOINT -->
  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.20 0 -0.06" rpy="0 0 0"/>  <!-- Front Center -->
  </joint>

  <!-- SENSOR MOUNT JOINT -->
  <joint name="sensor_mount_joint" type="fixed">
    <parent link="base_link"/>
    <child link="sensor_mount"/>
    <origin xyz="0.05 0 0.09" rpy="0 0 0"/>  <!-- Slightly Forward, On Top -->
  </joint>

  <!-- BATTERY COMPARTMENT JOINT -->
  <joint name="battery_joint" type="fixed">
    <parent link="base_link"/>
    <child link="battery_compartment"/>
    <origin xyz="-0.05 0 -0.05" rpy="0 0 0"/>  <!-- Slightly Rear, Below Chassis -->
  </joint>

  <!-- GAZEBO PROPERTIES -->
  
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.2</mu1>  <!-- Higher friction -->
    <mu2>1.2</mu2>
    <kp>1000000.0</kp>  
    <kd>1.0</kd>
  </gazebo>

  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.2</mu1>
    <mu2>1.2</mu2>
    <kp>1000000.0</kp>
    <kd>1.0</kd>
  </gazebo>

  <gazebo reference="front_caster">
    <material>Gazebo/Black</material>
    <mu1>0.05</mu1> 
    <mu2>0.05</mu2>
    <kp>1000000.0</kp>
    <kd>1.0</kd>
  </gazebo>

  <gazebo reference="sensor_mount">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="battery_compartment">
    <material>Gazebo/Green</material>
  </gazebo>

  <!-- PLUGIN -->
  <gazebo>
    <plugin
      filename="gz-sim-diff-drive-system"
      name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.35</wheel_separation> <!-- Distance bw wheels -->
      <wheel_radius>0.10</wheel_radius> <!-- Wheel radius -->
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>  <!-- Main Body Frame -->
    </plugin>
  </gazebo>

</robot>